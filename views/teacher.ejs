<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<h2><%= title %></h2>
<form method="POST" action="<%= action %>">
  
  <label for="teacherName">Teacher Name:</label>
  <input type="text" id="teacherName" name="TeacherName" value="<%= teacher ? teacher.TeacherName : '' %>"><br>
  
  <label for="qualification">Qualification:</label>
  <select id="qualification" name="qualification">
    <!-- Mathametics -->
    <option value="">Select a Qualification</option>
    <option value="Under_Graduation" <%= teacher && teacher.TeacherQualification === 'Under_Graduation' ? 'selected' : '' %>>Under Graduation</option>
    <option value="Graduation" <%= teacher && teacher.TeacherQualification === 'Graduation' ? 'selected' : '' %>>Graduation</option>
    <option value="Post_Graduation" <%= teacher && teacher.TeacherQualification === 'Post_Graduation' ? 'selected' : '' %>>Post Graduation</option>
    
    <!-- Add more options as needed -->
  </select><br>
  <label for="subject">Subject:</label>
  <select id="subject" name="Subject">
    <!-- Mathametics -->
    <option value="">Select a subject</option>
    <option value="English" <%= teacher && teacher.Subject === 'English' ? 'selected' : '' %>>English</option>
    <option value="Mathametics" <%= teacher && teacher.Subject === 'Mathametics' ? 'selected' : '' %>>Mathametics</option>
    <option value="Science" <%= teacher && teacher.Subject === 'Science' ? 'selected' : '' %>>Science</option>
    <option value="History" <%= teacher && teacher.Subject === 'History' ? 'selected' : '' %>>History</option>    
    <option value="Computer" <%= teacher && teacher.Subject === 'Computer' ? 'selected' : '' %>>Computer</option>
    <option value="All" <%= teacher && teacher.Subject === 'All' ? 'selected' : '' %>>All</option>
    <!-- Add more options as needed -->
  </select><br>

  
  <!-- <input type="text" id="subject" name="Subject" value="<%= teacher ? teacher.Subject : '' %>"><br> -->
  <% if (teacher) { %>
    <!-- If editing an existing teacher, include the teacher's ID in a hidden input field -->
    <input type="hidden" name="id" value="<%= teacher._id %>">
  <% } %>
  <button type="submit"><%= submitButtonLabel %></button>
  <a href="/">
  <button type="button">Cancel</button></a>
</form>
<%- include("partials/footer.ejs") %>